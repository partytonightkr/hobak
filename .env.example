# =============================================================================
# Commune Social App - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values.
# NEVER commit .env to version control.
# =============================================================================

# --- General ---
NODE_ENV=development
# "development" | "production" | "test"

# --- Backend Server ---
PORT=4000
CORS_ORIGIN=http://localhost:3000

# --- Database (PostgreSQL) ---
DATABASE_URL=postgresql://commune:commune_dev@localhost:5432/commune?schema=public

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- JWT / Auth ---
# CRITICAL: These MUST be changed in production. Use at least 32 random characters.
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-access-secret-change-me
JWT_REFRESH_SECRET=your-refresh-secret-change-me
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# --- OAuth (Optional) ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# --- Stripe ---
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PREMIUM_PRICE_ID=price_...
STRIPE_PRO_PRICE_ID=price_...

# --- File Uploads ---
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
# 5 MB in bytes

# --- Email (SMTP) ---
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@commune.app

# --- Frontend (Next.js public vars) ---
NEXT_PUBLIC_API_URL=http://localhost:4000/api/v1
NEXT_PUBLIC_WS_URL=http://localhost:4000
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
NEXT_PUBLIC_APP_NAME=Commune
NEXT_PUBLIC_APP_URL=http://localhost:3000

# --- Logging ---
LOG_LEVEL=debug
# "debug" | "info" | "warn" | "error"
